<!DOCTYPE html>
<html lang="en">
  <head>
    <title></title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/css/shipper.css">
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Titan+One&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="icon" href="/images/logo-quanhot.png" type="image/png" />
  </head>
  <%- include ('./../partials/nav-shipper')%>
  <body>
    <div class="container bg-light text-center py-4 my-4 shadow">
      <h1 class="display-4 text-primary">Active Orders</h1>
    </div>
    
    <div class="container mt-4 bg-light shadow"> <!-- Add bg-light class here for a light gray background -->
      <div class="row">
        <% orders.forEach(function(order) { %>
          <div class="col-lg-4 col-md-6 col-sm-12 mb-4 mt-4">
            <div class="card" id="card-container">
              <div class="card-body">
                <h5 class="card-title text-success text-center p-3 fs-2"><%= order.customer.name %></h5>
                <p class="card-text mx-3"><strong>Address:</strong> <%= order.address %></p>
                <p class="card-text mx-3"><strong>Order Date:</strong> <%= order.orderDate.toLocaleDateString() %></p>
                <p class="card-text mx-3"><strong>Total Cost:</strong> $<%= order.totalCost.toFixed(2) %></p>
                <div class="d-flex justify-content-center" id="btn-container">
                  <a href="shipper/<%= order._id %>" class="btn btn-primary btn-sm" id="btn">View Details</a>
                </div>
              </div>
            </div>
          </div>
        <% }); %> 
      </div>
    </div>
    <%- include ('./../partials/footer')%>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
  </body>
</html>



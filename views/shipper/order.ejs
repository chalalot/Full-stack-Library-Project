<!DOCTYPE html>
<html lang="en">
  <head>
    <title></title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="css/style.css" rel="stylesheet">
  </head>
  <body>
<h1>Order Details</h1>
<h1><%= order.customer %></h1>
<h1><%= order.address %></h1>
<h1><%= order.orderDate.toLocaleDateString() %></h1>
<h1><%= order.totalCost %></h1>
    <form action="/shipper/<%= order._id %>" method="post">
              <input type="submit" name="submit" value="Delivered"> 
              <input type="submit" name="submit" value="Canceled">
            </form>
<ul>
  <% order.products.forEach(function (orderProduct) { %>
      <a href="/shipper/product/<%= orderProduct.product._id %>">link</a>
      <h2>Name: <%= orderProduct.product.name %></h2>
      <h2>Price: <%= orderProduct.product.price %></h2>
  <% }); %>
</ul>
  </body>
</html> 

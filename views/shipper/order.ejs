<!DOCTYPE html>
<html lang="en">
  <head>
    <title></title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="css/style.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/shipper.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="icon" href="/images/logo-quanhot.png" type="image/png" />
  </head>
  <%- include ('./../partials/nav-shipper')%>
  <body>
    <div class="container-fluid">
      <div class="row justify-content-center vh-110">
        <div class="col-md-8 order-box">
          <div class="container bg-light text-center py-4 my-4 shadow">
            <h1 class="display-4 text-primary">Orders' detail</h1>
          </div>
          <div class="row">
            <div class="col-lg-6 col-md-12 bg-light text-center py-4 shadow">
              <h2>Customer: <%= customer.name %></h2>
              <p>Address: <%= order.address %></p>
              <p>Order date: <%= order.orderDate.toLocaleDateString() %></p>
              
      
              <form action="/shipper/<%= order._id %>" method="post">
                <div class="btn-group mt-3" role="group" aria-label="Order Actions">
                  <button type="submit" name="submit" value="Delivered" class="btn btn-success">Delivered</button>
                  <button type="submit" name="submit" value="Canceled" class="btn btn-danger">Canceled</button>
                </div>
              </form>
            </div>
    
            <ul class="col-lg-6 col-md-12 list-group" id="fixed-height">
              <% order.products.forEach(function (orderProduct) { %>
                <li class="list-group-item d-flex row p-5">
                  <h3 class="col-6"><strong>Product's Name: </strong></h3>
                  <div class="col-6">
                    <a href="/shipper/product/<%= orderProduct.product._id %>">
                      <h4><%= orderProduct.product.name %></h4>
                    </a>                  
                    <p><strong>Price: </strong>$<%= orderProduct.product.price %></p>
                  </div>
                </li>
              <% }); %>
              <p class="align-self-end"><strong>Total cost: </strong> $<%= order.totalCost %></p>
            </ul>
          </div>
        </div>
      </div>
    </div>
    <%- include ('./../partials/footer')%>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
  </body>
</html> 

<!DOCTYPE html>
<html lang="en">
  <head>
    <title></title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="css/styles.css" rel="stylesheet">
    <link href="css/customer.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/5c0d7c8bb2.js" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
  </head>
  <body>
    <%- include ('./nav-customer') %>

    <div class="container-sm profile">
      <div class="row"> 
        <div class="col-4">
          <img src="/<%= user.profilePicture %>" alt="profile picture">
        </div>

        <div class="col-8">
          <h1>Customer</h1>
          <a href="profiles/customer-profile"><%= user.name %>'s Profile</a>
        </div>
      </div>
    </div>

    
      
    <form class="container"  action="customer/filter-amount" method="POST">
      <div>
        <label class="text-black" for="maximum">Filter maximum:</label> 
        <input type="text" id="maximum" placeholder="Enter amount..." name="maximum" class="text-black">
      </div>  

      <div>
        <label class="text-black" for="minimum">Filter minimum:</label>
        <input type="text" id="minimum" placeholder="Enter amount..." name="minimum" class="text-black">
      </div>
        <button type="submit" class="btn btn-primary">search</button>
    </form>
    



    <div class="container-fluid products-area"> 
      <ul class="row">
        <% products.forEach( (product) =>{ %>
            <li class="col-lg-2 col-md-3">
              <img src="/<%= product.image %>" alt="profile picture">
              <a href="/customer/<%= product._id %>"> <%= product.name %> </a>
            </li>
        <% }); %>
      </ul>
    </div>

    <div class="user-cards" data-product-cards-container></div>

      <template data-product-template>
        <div class="card">
          <div class="header" data-header></div>
          <div class="body" data-body></div>
        </div>
      </template>
    
    <%- include ('./../partials/footer')%>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
    <script src="/js/customer.js" defer></script>
  </body>
</html>

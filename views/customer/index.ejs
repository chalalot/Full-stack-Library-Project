<!DOCTYPE html>
<html lang="en">
  <head>
    <title></title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="css/styles.css" rel="stylesheet">
    <link href="css/customer.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/5c0d7c8bb2.js" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
  </head>
  <body>
    <%- include ('./nav-customer') %>

    <div class="container-sm rounded profile ">
      <div class="row"> 
        <div class="col-4">
          <img src="/<%= user.profilePicture %>" alt="profile picture">
        </div>

        <div class="col-8">
          <h1>Customer</h1>
          <a href="profiles/customer-profile" class="text-black"><%= user.name %>'s Profile</a>
        </div>
      </div>
    </div>

    
    
    <div class="container my-3 form-floating">
      <form class="rounded p-3" action="customer/filter-amount" method="POST">
        <div class="mb-3">
          <label class="form-label text-black" for="maximum">Filter maximum:</label>
          <input type="text" id="maximum" placeholder="Enter amount..." name="maximum" class="form-control form-control-sm">
        </div>
        
        <div class="mb-3">
          <label class="text-black form-label" for="minimum">Filter minimum:</label>
          <input type="text" id="minimum" placeholder="Enter amount..." name="minimum" class="form-control form-control-sm">
        </div>
        
        <button type="submit" class="btn btn-dark mt-3 d-block mx-auto">Search</button>
      </form>
    </div>
    



    <div class="container-fluid products-area"> 
      <ul class="row mt-4">
        <% products.forEach( (product) =>{ %>
            <li class="col-lg-2 col-md-3 card ">
              <img src="/<%= product.image %>" alt="profile picture" class="card-img-top rounded card-img-top rounded ">
              <div class="card-body">
                  <a href="/customer/<%= product._id %>" class="card-title"> <%= product.name %> </a>
              </div>
            </li>
        <% }); %>
      </ul>
    </div>

    <div class="user-cards" data-product-cards-container></div>

      <template data-product-template>
        <div class="card">
          <div class="header" data-header></div>
          <div class="body" data-body></div>
        </div>
      </template>
    
    

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
    <script src="/js/customer.js" defer></script>
    <%- include ('./../partials/footer')%>
  </body>
</html>

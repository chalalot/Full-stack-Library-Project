<!DOCTYPE html>
<html lang="en">
  <head>
    <title>View My Products</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="css/styles.css" rel="stylesheet">
    <link href="/css/styles.css" rel="stylesheet">
    <link href="/css/vendor.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/5c0d7c8bb2.js" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
  </head>
  <body>
    <% include ('./vendor-nav.ejs') %>
    <h1>Seller</h1>
    <h1>Hi <%= user.username %></h1>
    <h1><%= user.__t %></h1>
    <img src="/<%= user.profilePicture %>" alt="profile picture">

    <form action="/profiles/change-avatar" method="POST" enctype="multipart/form-data"> 
      <input type="file" name="image">
      <input type="submit" name="" value="Change">  
    </form>

    <form action="checkin/logout?_method=DELETE" method="POST"> 
      <button type="submit">Log Out</button>
    </form>

    <h1>View My Products</h1>
    <% if (products && products.length > 0) { %>
      <ul>
        <% products.forEach((product) => { %>
          <li class="col">
            <img src="/<%= product.image %>" alt="product picture">
            <h1><%= product.name %></h1>
            <h1><%= product.price %></h1>
            <h3><%= product.description %></h3>
            <a href="/">Go back</a>
          </li>
        <% }); %>
      </ul>
    <% } else { %>
      <p>You have no products.</p>
    <% } %>
  
    <% include ('./../partials/footer')%>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>

<!DOCTYPE html>
<html lang="en">
    <head>
        <title></title>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="/css/styles.css" rel="stylesheet">
        <link href="/css/customer.css" rel="stylesheet">
        <script src="https://kit.fontawesome.com/5c0d7c8bb2.js" crossorigin="anonymous"></script>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
        <link rel="icon" href="/images/logo-quanhot.png" type="image/png" />
    </head>
    <body>
        <%- include ('./vendor-nav') %>
        
        <div class="container">
            <ul>
                <% products.forEach( product => {%>
                    <li class="col">
                        <div class="col-lg-4 col-md-6 d-flex justify-content-center">
                            <div class="card text-center mb-4 d-flex flex-column align-items-center" style="width: 18rem;">
                              <img src="/<%= products.image %>" alt="product image" class="w-100">
                              <div class="card-body text-capitalize my-1">
                                <span class="custom-link"><a href="/vendor/<%= products._id %>"><%= products.name %></a></span>
                                <span class="card-text text-black mt-4"><strong class="text-black"><%= products.price %> $</strong></span>
                              </div>
                            </div>
                        </div>
                    </li>
                <% }); %>
            </ul>
        </div>
        
        <%- include ('./../partials/footer')%>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
    </body>
</html>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    
  </head>
  <body class="add-product-body">
    <%- include ('./../vendor/vendor-nav.ejs') %>
    <nav aria-label=" breadcrumb  " class="row d-flex justify-content-between m-3">
      <ol class="breadcrumb" style="font-size: 1.5em;">
        <li class="breadcrumb-item pl-3"><a href="/" class="text-black">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Create Product</li>
      </ol>
    </nav>

    <div class="container-add-product form">
      <h1 class="add-product-h1"><strong> Create product </strong></h1>
      <form action="add-products" method="POST" enctype="multipart/form-data">   
        <div class="fill-name-product mb-3"> 
          <label for="name">Name</label>
          <input type="text" id="name" name="name" class="form-control" required> 
        </div>
        <div class="fill-price-product mb-3">
          <label for="price">Price</label>
          <input type="number" id="price" name="price" class="form-control" required min="0"> 
        </div>
        <div>
          <label for="description-add-product">Description</label>
          <textarea id="description" name="description" required></textarea> 
        </div>
        <div class="image-add-product mb-3">
          <input type="file" name="image" class="form-control-file" required>
        </div>
        <button type="submit" class="btn btn-primary-add-product create">Create</button>
        <% if (error && error.length > 0) { %>
          <p class="text-danger mt-3"><%= error %></p>
        <% } %>
      </form>
      <a href="/" class="btn-go-back">Go back</a>
    </div> 
    <%- include ('./../partials/footer')%>
  </body>
</html>

<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Vendor Portal</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="/css/styles.css" rel="stylesheet">
    <link href="/css/vendor.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/5c0d7c8bb2.js" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
  </head>
  <body>
    <%- include ('./vendor-nav.ejs') %>
    <div class="container">

      <div class="py-3">
        <h1>Hi <a href="profiles/vendor-profile"><%= user.username %></a></h1>
        <h1><%= user.__t %></h1>
        <img src="/<%= user.profilePicture %>" alt="profile picture" class="img-fluid rounded-circle" style="max-width: 200px;">
      </div>

      <div class="mb-4">
        <h1>View My Products</h1>
        <a href="product.ejs" class="btn btn-primary">View Products</a>
      </div>
    
      <% if( products && products.length >0) { %>
        <ul class="list-group">
          <% products.forEach( (product) =>{ %>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <a href="/vendor/<%= product._id %>"> <%= product.name %> </a>
            <span class="badge bg-primary rounded-pill"><%= product.quantity %></span>
          </li>
          <% }); %>
        </ul>
        
      <%} else { %>
        <p>There is no product...</p>
      <%} %>

      <div class="mt-4">
        <a href="/vendor/add-products" class="btn btn-success">Add products</a>
      </div>
    </div>
    <%- include ('./../partials/footer')%>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>

  </body>
</html>



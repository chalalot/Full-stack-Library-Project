<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Vendor Portal</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="/css/styles.css" rel="stylesheet">
    <link href="/css/vendor.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/5c0d7c8bb2.js" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
  </head>

  <%- include ('./../vendor/vendor-nav.ejs') %>

  <header id="header">
    <div class="container">
      <div class="py-3">
        <h1 class="text-capitalize">Hi <a href="profiles/vendor-profile"><%= user.username %></a></h1>
        <h1><%= user.__t %></h1>
        <img src="/<%= user.profilePicture %>" alt="profile picture" class="img-fluid rounded-circle" style="max-width: 200px;">
      </div>
    </div>
  </header>

  <body id="product-view" class="py-5">
    <div class="container">
      <div class="title text-center">
        <h1 class="position-relative d-inline-block">View My Products</h1>
      </div>

      <div class="container-fluid mr-4 product-view" style="height: fit-content;" >
        <ul class="row mt-4">
          <% if( products && products.length >0) { %>
          <ul class="list-group mt-4 row gx-0 gy-3">
            <% products.forEach( (product) =>{ %>
            <li class="card text-center col-5 mx-3 mb-4" style="width: 18rem;">
              <img src="/<%= product.image %>" alt="profile picture" class="w-100">
              <div class="card-body text-capitalize my-1">
                <a href="/vendor/<%= product._id %>"> <%= product.name %></a>
                <span class="card-text text-black mt-4"><strong class="text-black"><%= product.price%> $</strong></span>
              </div>
            </li>
            <% }); %>
          </ul>

          <%} else { %>
            <p>There is no product...</p>
          <%} %>
        </ul>
      </div>
    </div>

    <div class="mt-4">
      <a href="/vendor/add-products" class="btn btn-success">Add products</a>
    </div>

    <%- include ('./../partials/footer')%>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>

  </body>
</html>



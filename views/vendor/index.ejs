<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Vendor Portal</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="/css/styles.css" rel="stylesheet">
    <link href="/css/vendor.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/5c0d7c8bb2.js" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
  </head>
  <body>
    <%- include ('./vendor-nav.ejs') %>
    <h1>Seller</h1>
    <h1>Hi <%= user.username %></h1>
    <h1><%= user.__t %></h1>
    <img src="/<%= user.profilePicture %>" alt="profile picture">
    
    <form action="/profiles/change-avatar" method="POST" enctype="multipart/form-data"> 
      <input type="file" name="image">
      <input type="submit" name="" value="Change">  
    </form>
  
    <form action="checkin/logout?_method=DELETE" method="POST"> 
      <button type="submit" class="btn btn-dark mt-5 mx-auto d-block ">Log Out</button>
    </form>

    <h1>Vendor Portal</h1>
    
    <a href="product.ejs">View Products</a>
    <% if( products && products.length >0) { %>
      <% products.forEach( (product) =>{ %>
        <li class="col">
          <a href="/vendor/<%= product._id %>"> <%= product.name %> </a>
        </li>
      <% }); %>

    <%} else { %>
      <p>There is no product..</p>
    <%} %>

    <a href="/vendor/add-products">Add products</a>

    <%- include ('./../partials/footer')%>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>

  </body>
</html>


